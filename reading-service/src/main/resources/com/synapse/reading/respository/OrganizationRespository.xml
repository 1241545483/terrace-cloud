<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.synapse.reading.respository.OrganizationRespository">


    <select id="searchOrgs" resultMap="com.synapse.reading.mapper.OrganizationMapper.BaseResultMap">
        select  * from organization
        <where>
            <if test="status != null" >
                status = #{status,jdbcType=VARCHAR}
            </if>
            <if test="parentOrgId != null" >
                and  parent_org_id = #{parentOrgId,jdbcType=VARCHAR}
            </if>
            <if test="name != null" >
                and  org_name like '%${name}%'
            </if>
        </where>
    </select>

</mapper>
