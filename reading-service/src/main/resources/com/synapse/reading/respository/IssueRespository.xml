<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.synapse.reading.respository.IssueRespository">



    <select id="selectBybelongToId" resultMap="com.synapse.reading.mapper.IssueMapper.BaseResultMap" parameterType="map" >
        select
        <include refid="com.synapse.reading.mapper.IssueMapper.Base_Column_List" />
        from `issue`
        where
        `belong_to_id` = #{recId} AND   `belong_to` = #{belongTo}
    </select>

</mapper>
