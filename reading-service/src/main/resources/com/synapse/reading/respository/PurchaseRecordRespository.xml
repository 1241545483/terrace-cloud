<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.synapse.reading.respository.PurchaseRecordRespository">

    <select id="selectByPay" resultMap="com.synapse.reading.mapper.PurchaseRecordMapper.BaseResultMap" parameterType="com.synapse.reading.model.PurchaseRecord" >
        select
        <include refid="com.synapse.reading.mapper.PurchaseRecordMapper.Base_Column_List" />
        from `purchase_record`
        where
        `lesson_id` = #{lessonId}
        AND user_id=  #{userId}
    </select>

</mapper>
