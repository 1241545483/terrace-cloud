<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.synapse.reading.respository.auth.BindRespository">


    <select id="selectByOpenId"  parameterType="map" resultMap="com.synapse.reading.mapper.mapper.BindMapper.BaseResultMap">
        SELECT  * from bind where  open_id= #{openId}
    </select>

    <select id="selectByUserIdAndOpenId"  parameterType="map" resultMap="com.synapse.reading.mapper.mapper.BindMapper.BaseResultMap">
        SELECT  * from bind where  open_id= #{openId} and  user_id= #{userId}
    </select>


    <select id="selectByUnionId"  parameterType="map" resultMap="com.synapse.reading.mapper.mapper.BindMapper.BaseResultMap">
        SELECT  * from bind where  union_id= #{unionId}
    </select>

    <select id="selectByUserId"  parameterType="map" resultMap="com.synapse.reading.mapper.mapper.BindMapper.BaseResultMap">
        SELECT  * from bind where  user_id= #{userId}
    </select>

</mapper>
